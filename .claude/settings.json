{
  "enableAllProjectMcpServers": true,
  "permissions": {
    "allow": ["mcp__chrome-devtools", "mcp__eslint", "mcp__stylelint"]
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/append_agentsmd_context.sh"
          }
        ]
      }
    ]
  }
}
